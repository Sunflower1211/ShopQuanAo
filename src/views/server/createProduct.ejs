<!DOCTYPE html>
<html>

<head>
    <title>Thêm sản phẩm</title>
    <!-- Bước 1: Đã bao gồm tệp CSS của Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>

<body>
    <div class="container">
        <h1>Thêm sản phẩm</h1>
        <a href="/server/product" class="btn btn-primary">Về trang sản phẩm</a>
        <form action="/server/createProduct" method="POST">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="productID">Mã:</label>
                    <input type="text" id="productID" name="productID" class="form-control" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="title">Tên:</label>
                    <input type="text" id="title" name="title" class="form-control" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="categoryID">Loại:</label>
                    <select id="categoryID" name="categoryID" class="form-control" required>
                        <% category.forEach(function(item, index) { %>
                            <option value="<%= item.id %>">
                                <%= item.name %>
                            </option>
                            <% }); %>
                                <!-- Thêm các tùy chọn khác tại đây -->
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label for="price">Giá:</label>
                    <input type="text" id="price" name="price" class="form-control" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="discount">Giảm giá:</label>
                    <input type="text" id="discount" name="discount" class="form-control" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="supplierID">Nhà cung cấp:</label>
                    <select id="supplierID" name="supplierID" class="form-control" required>
                        <% supplier.forEach(function(item, index) { %>
                            <option value="<%= item.id %>">
                                <%= item.name %>
                            </option>
                            <% }); %>
                                <!-- Thêm các tùy chọn khác tại đây -->
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="size">Size:</label>
                    <input type="text" id="size" name="size" class="form-control" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="image">Hình ảnh:</label>
                    <input type="text" id="image" name="image" class="form-control" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="quantity">Số lượng:</label>
                    <input type="text" id="quantity" name="quantity" class="form-control" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="couleur">Màu:</label>
                    <input type="text" id="couleur" name="couleur" class="form-control" required>
                </div>
            </div>
            <div class="form-group">
                <label for="description">Mô tả:</label>
                <textarea id="description" name="description" class="form-control"></textarea>
            </div>
            <input type="submit" value="Thêm sản phẩm" class="btn btn-primary">
        </form>
    </div>

    <!-- Bước 2: Đã bao gồm tệp JavaScript của Bootstrap -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>

</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../layout/header.ejs'); -%>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-6">
            <form action="/account/loginUser" method="POST">
              <h2>Đăng nhập</h2>
              <div class="form-group">
                <label for="email">email:</label>
                <input type="text" class="form-control" id="email" name="email" required>
              </div>
              <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" class="form-control" id="password" name="password" required>
              </div>
              <button type="submit" class="btn btn-primary">Đăng nhập</button>
              <a href="/account/register" class="btn btn-success">Đăng kí</a>
              <a href="/account/forgotLogin" class="btn btn-secondary">Quên mật khẩu</a>
              <a href="/account/google" class="btn btn-info">Đăng nhập bằng gg</a>
            </form>
          </div>
        </div>
      </div>
    <%- include('../layout/script.ejs'); -%>
</body>
</html>
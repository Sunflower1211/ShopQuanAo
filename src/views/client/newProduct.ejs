<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../layout/header.ejs'); -%>
  <title>Quần áo mới</title>
</head>
<body>

  <!-- Header -->
  <%- include('../layout/navbar.ejs'); -%>

  <!-- Hero section -->
  <section class="jumbotron text-center">
    <h1 class="display-4">Mẫu Quần Áo Mới Nhất</h1>
  </section>

  <div class="container mt-5">
    <div class="row">
      <div class="col-md-6">
        <a href="/newProduct?category=quan" class="btn btn-primary">Quần mới</a>
        <a href="/newProduct?category=ao" class="btn btn-secondary">Áo mới</a>
      </div>
    </div>
  </div>

  <!-- Sản phẩm mới -->
  <div class="container mt-5">
    <div class="row">

      <% for(var i=0; i < product.length; i++) { %>
      <div class="col-lg-4 col-md-6 mb-4">
        <div class="card">
          <img src="<%= product[i].image %>" class="card-img-top" alt="Product 1">
          <div class="card-body">
            <h5 class="card-title"><%= product[i].title %></h5>
            <p class="card-text">Giá: <%= product[i].price %>đ</p>
            <a href="/detail/<%= product[i].productID %>" class="btn btn-primary">Mua sản phẩm</a>
          </div>
        </div>
      </div>
      <% } %>

      

      
    </div>
  </div>


  <!-- Footer -->
  <footer class="bg-dark text-white text-center py-3">
    &copy; 2023 Product Catalog
  </footer>

  <!-- Liên kết với Bootstrap JavaScript -->
  <%- include('../layout/navbar.ejs'); -%>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</body>
</html>